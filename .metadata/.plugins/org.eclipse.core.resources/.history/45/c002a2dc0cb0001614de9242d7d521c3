		Seal seal = new Seal();
		Fox fox = new Fox();
		
		ArrayList<Animal> animals = new ArrayList<Animal>();
		animals.add(duck);
		animals.add(fish);
		animals.add(seal);
		animals.add(fox);
		
		for(Animal animal : animals){
			System.out.println("The " + animal.getClass().getSimpleName() + " says " + animal.say());
		}
		
