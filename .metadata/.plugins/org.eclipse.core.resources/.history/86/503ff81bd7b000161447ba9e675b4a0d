package com.betaben.animalactivity;

public abstract class Animal {

	public abstract String say();
	
	private int x;
	private int y;
	
	public void Animate(int x, int y){
		int xCounter = 0;
		int yCounter = 0;
		
		while(true){
			if(x<xCounter){
				this.x ++;
				xCounter ++;
			}
			if(y<yCounter){
				this.y ++;
				yCounter ++;
			}
		}
	}
	
}
